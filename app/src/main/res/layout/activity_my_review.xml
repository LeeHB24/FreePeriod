<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.mypage.MyReviewActivity"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">


        <!-- Your xml here -->
        <TextView
            android:id="@+id/MyReviewText"
            android:layout_width="388dp"
            android:layout_height="32dp"
            android:background="@color/colorPrimaryDark"
            android:text="MyReview"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            />

    <RatingBar
        android:layout_gravity="center"
        android:id="@+id/ratingReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:stepSize="0.5" />


    <TextView
        android:layout_gravity="center"
        android:id="@+id/rateNumber"
        android:layout_width="28dp"
        android:layout_height="16dp"
        android:text=""
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/rateNumber">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mypage_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <!-- Bottom Navbar for Pivot activity -->

</LinearLayout>